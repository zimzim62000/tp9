{% extends 'base.html.twig' %}

{%  import "macro.html.twig" as macro %}

{% block body %}

    <h2>index WeaponSkin</h2>

    <ul>
        {{ macro.weapons(weapons) }}
    </ul>

    <ul>
        {% for note in notes %}

            {% if note.note < 8 %}
                <p style="color: red;">{{ note.note }}</p>
                {{ note.user.email }}
            {% endif %}

            {% if note.note >= 8 and note.note < 12 %}
                <p style="color: orange;">{{ note.note }}</p>
                {{ note.user.email }}
            {% endif %}

            {% if note.note >= 12 and note.note < 16 %}
                <p style="color: yellow;">{{ note.note }}</p>
                {{ note.user.email }}
            {% endif %}

            {% if note.note >= 16 and note.note <= 20 %}
                <p style="color: green;">{{ note.note }}</p>
                {{ note.user.email }}
            {% endif %}

            </br>
            {% if is_granted('ROLE_ADMIN') == true %}
                <a href="{{  path('noteskin_new', {'id': note.skin.id}) }}" >Modifier la note</a>
                <a href="{{  path('noteskin_delete', {'id': note.skin.id}) }}" >Supprimer la note</a>
            {% elseif note.user.email != app.user.email %}
                <a href="{{  path('noteskin_new', {'id': note.skin.id}) }}" >Ajouter une note Ã  ce skin</a>
            {% endif %}

            </br>
        {%  endfor %}

    </ul>

{% endblock %}